<aluguelpage>:
    MDFloatLayout:
        MDFloatLayout:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.08
            radius: [0, 0, 70, 70]
            md_bg_color: app.theme_cls.primary_color

            #TITULO CADASTRO CONTAS FIXAS
            MDLabel:
                pos_hint: {"right": 0.95, "top": 0.5}
                size_hint: 0.85, 0.1
                text: "Cadastro mes de: "
                font_style: "H5"
                markup: True
                halign: 'center'
                valign: 'middle'
                id: label_aviso_aluguel

        #CAMPO ALUGUEL
        MDGridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.90}
            size_hint: 0.8, 0.075
            MDTextField:
                hint_text: "Aluguel"
                hint_text_color_normal: "orange"
                text_color_normal: "red"
                text_color_focus: "blue"
                line_color_normal: "orange"
                max_text_length: 15
                icon_right: "draw-pen"
                icon_right_color_normal: "red"
                id: preco_aluguel

        #CAMPO CONDOMINIO
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.80}
            size_hint: 0.8, 0.075
            MDTextField:
                hint_text: "Condomínio"
                hint_text_color_normal: "orange"
                text_color_normal: "red"
                text_color_focus: "blue"
                line_color_normal: "orange"
                max_text_length: 15
                icon_right: "draw-pen"
                icon_right_color_normal: "red"
                id: preco_condominio

        #CAMPO AGUA
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.70}
            size_hint: 0.8, 0.075
            MDTextField:
                hint_text: "Água"
                hint_text_color_normal: "orange"
                text_color_normal: "red"
                text_color_focus: "blue"
                line_color_normal: "orange"
                max_text_length: 15
                icon_right: "draw-pen"
                icon_right_color_normal: "red"
                id: preco_agua


        #BARRA CHECK CONDOMINIO
        MDFloatLayout:
            pos_hint: {"right": 0.9, "top": 0.62}
            size_hint: 0.8, 0.13
            radius: [70, 0, 70, 0]
            md_bg_color: utils.get_color_from_hex("#006d7e")

            MDLabel:
                pos_hint: {"right": 0.6, "top": 0.7}
                size_hint: 0.5, 0.050
                text: "Condominio incluso"
                halign: 'left'
                valign: 'middle'
            MDSwitch:
                active: False
                size: "48dp", "48dp"
                #OBS: MDSwitch so aceita posicionamento no formato abaixo ou da bug no switch
                pos_hint: {'center_x': .8, 'center_y': .7}
                size_hint: None, None
                id: check_cond

            MDLabel:
                pos_hint: {"right": 0.6, "top": 0.35}
                size_hint: 0.5, 0.050
                text: "Água inclusa"
                halign: 'left'
                valign: 'middle'
            MDSwitch:
                active: False
                size: "48dp", "48dp"
                pos_hint: {'center_x': .8, 'center_y': .35}
                size_hint: None, None
                id: check_agua

        #BOTAO CONFIRMAR E SALVAR
        MDRaisedButton:
            text: "Confirmar e salvar"
            pos_hint: {"right": 0.90, "top": 0.48}
            size_hint: 0.8, 0.08
            on_release: app.calcular_resumo_cf()
            md_bg_color: app.theme_cls.primary_color

        #TITULO DE CONTAS FIXAS
        MDLabel:
            pos_hint: {"right": .9, "top": 0.39}
            size_hint: 0.8, 0.05
            text: "[color=#00CFDB]Resumo:[/color]"
            markup: True
            font_style: "H5"
            halign: 'center'
            valign: 'middle'

        #PAINEL CONTAS FIXAS
        MDFloatLayout:
            pos_hint: {"right": 0.9, "top": 0.33}
            size_hint: 0.8, 0.20
            radius: [70, 0, 70, 0]
            md_bg_color: utils.get_color_from_hex("#006d7e")

            MDLabel:
                pos_hint: {"right": 0.9, "top": 0.75}
                size_hint: 0.8, 0.1
                text: "Aluguel a pagar: R$ 0.00"
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                id: label_aluguel

            MDLabel:
                pos_hint: {"right": 0.9, "top": 0.55}
                size_hint: 0.8, 0.1
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text: "Condominio a pagar: R$ 0.00"
                id: label_cond

            MDLabel:
                pos_hint: {"right": 0.9, "top": 0.35}
                size_hint: 0.8, 0.1
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text: "Água a pagar: R$ 0.00"
                id: label_agua




    #BOTAO SAIR
    MDRaisedButton:
        text: "Sair"
        on_release: app.mudar_tela("homepage")
        pos_hint: {"center_x": .5, "center_y": .05}
        size_hint: 1, 0.10













